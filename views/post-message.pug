html
  head
    title Post message
    style.

      div {
        text-align: center;
      }

      h1 {
        text-align: center;
      }

      input[type=text] {
        margin: 10px;
        padding: 10px;
        width: 60%;
        border: solid 1px black;
        border-radius: 5px;
        font-family: arial;
        font-size: 1em;
      }

      input[type=textarea] {
        margin: 10px;
        padding: 10px;
        width: 60%;
        height: 200px;
        border: solid 1px black;
        border-radius: 5px;
        font-family: arial;
        font-size: 1em;
      }

      input[type=submit]{
        margin: 10px;
        cursor: pointer;
        width: 60%;
        background-color: #990000;
        border: #990000;
        color: black;
        border-radius: 5px;
        font-size: 1.2em;
        padding: 5px;
        font-weight: bold;
      }

  body
    include nav.pug
    br
    br
    br

    h1 Post message
    div
      form(method="POST" action="/post-message")
        input(type="text" name="username" placeholder="Username")
        input(type="text" name="title" placeholder="Title")
        input(type="textarea" name="message" placeholder="Leave your message")
        input(type="submit" value="Post message")


